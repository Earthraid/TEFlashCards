@using Capstone.Web.Models
@model Deck
@{
    ViewBag.Title = "Study Session";
    int cardCount = Model.DeckCards.Count;
}

<script type="text/javascript" src="../../Scripts/DeckScripts/study.js"></script>
<div hidden></div>
<div id="cardCount" data-name="@cardCount"></div>

<h2>StudySession</h2>

<div class="studyFrame">

    <div class="cardFrame">
        @{
            foreach (Card currentCard in Model.DeckCards)
            {
                <div class="studyCard newCard">
                    <div class="cardFront">
                        <p>@currentCard.Front</p>
                    </div>
                    <div class="cardBack hiddenSide">
                        <p>@currentCard.Back</p>
                    </div>
                </div>
            }
        }
    </div>
    <button class="studyNav"></button>
    <div class="score">
        <div class="totalCorrect">a</div>
        <div class="totalViewed">b</div>
    </div>
</div>

<div class="resultsFrame">
    <p>@Html.ActionLink("Study again", "BeginStudy", "Deck", new { deckID = Model.DeckID }, null)</p>
    <p>@Html.ActionLink("Return to your decks", "Index", "Deck")</p>
</div>