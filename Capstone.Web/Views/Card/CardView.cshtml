@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Capstone.Web.Models
@model List<Card>

<h2>View all cards</h2>

<div class="card_flex_container">

    @{
        foreach (Card thisCard in Model)
        {

            <div class="card_bothsides">
                <div class="card_front">@thisCard.Front</div>
                <div class="card_back">@thisCard.Back</div>
                <div class="card_tags">
                    <p class="tag_list">Tags: </p>
                    @if (thisCard.ThisCardTags.Count != 0)
                    {
                        foreach (var tag in thisCard.ThisCardTags)
                        {
                            <p class="tag_list">@tag</p>
                        }
                    }
                    else
                    {
                        <p class="tag_list">No tags assigned.</p>
                    }
                </div>
                <div class="card_option">
                    @Html.ActionLink("Add card to deck", "CardToDeck", "Card")
                </div>
                <div>
                    @Html.ActionLink("Modify this card", "CardModify", "Card", new { id = thisCard.CardID }, null)
                </div>
            </div>


        }
    }

</div>

