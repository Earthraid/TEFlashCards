@using Capstone.Web.Models
@model List<Deck>
@{
    ViewBag.Title = "SelectDeck";
}

<h2 class="title">Add card to deck</h2>

@{
    foreach (Deck thisDeck in Model)
    {
        <p>
            @Html.ActionLink(thisDeck.Name, "AddCardToDeck", "Card", new { cardID = ViewBag.CardID, deckID = thisDeck.DeckID }, null)
    }
}

@{
    <h2 class="title">Available to Add to:</h2>
    foreach (Deck thisDeck in ViewBag.CurCard.AvailableDecksToAddThisCard)
    {
        <p>
            @Html.ActionLink(thisDeck.Name, "AddCardToDeck", new { cardID = ViewBag.CardID, deckID = thisDeck.DeckID });
        </p>
    }
}

@{
    <h2 class="title">Decks Where Card Already Exists:</h2>
    foreach (Deck thisDeck in ViewBag.CurCard.DecksHaveThisCard)
    {
        <p>
            @Html.Label(thisDeck.Name)
        </p>
    }
}
